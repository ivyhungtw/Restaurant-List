{{!-- Banner --}}
<header>
  <div class="showpage-banner" style="
    background: #dddddd center center url('{{ restaurant.image}}'); background-size: cover"></div>
</header>

{{!-- Rating --}}
<div class="container d-flex justify-content-center" id="showpage-rating">
  <span class="badge rounded-pill bg-danger font-weight-normal">
    {{ restaurant.rating }}
    <i class="fas fa-star fa-xs"></i>
  </span>
</div>

{{!-- Info --}}
<div class="container">

  <div class="row mt-3">
    <div class="col-12 col-md-10 mx-auto">

      <div class="d-flex justify-content-end mb-3">
        {{!-- Edit --}}
        <a href="/restaurants/{{ restaurant._id }}/edit" class="me-1"><i class="fas fa-edit icon-edit"></i></a>
        {{!-- Delete --}}
        <form method="POST" action="/restaurants/{{ restaurant._id }}?_method=DELETE" style="display: inline;">
          <button type="submit" class="fas fa-trash-alt icon-delete" style="border: none;"></button>
        </form>
      </div>

      <h1 class="mb-3 restaurant-showpage-title">{{ restaurant.name }}</h1>
      <p class="mb-1 text-center text-secondary">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
        </span>
        {{ restaurant.location }}
        <a href="{{ restaurant.google_map }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>
      <p class="mb-1 text-center text-secondary">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-3 text-center text-secondary">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5 mx-2 text-center">
        {{ restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}" style="max-width: 600px;">

    </div>
  </div>
</div>