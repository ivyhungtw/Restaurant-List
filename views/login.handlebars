{{!-- Banner --}}
<div class="banner"></div>

<div class="row my-5">
  <div class="col-11 col-md-6 m-auto" style="max-width:420px">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label class="col-form-label" for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="{{ email }}">
        </div>
        <div class="form-group mt-3">
          <label class="col-form-label" for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="{{ password }}">
        </div>
        <div class="d-grid gap-2 mt-3">
          <button type="submit" class="btn btn-primary btn-login">Login</button>
          <a href="/auth/facebook" class="btn btn-info">Facebook Login</a>
          {{!-- Google Login --}}
          <a href="/auth/google" class="btn btn-outline-info">Google Login</a>
        </div>


      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register" style="color: #4592af;">Register</a>
      </p>
    </div>
  </div>
</div>