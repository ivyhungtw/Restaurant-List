{{!-- Banner --}}
<div class="banner"></div>
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <h1 class="mb-3">Discover Local Food</h1>
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container">
  <div class="row" id="data-panel">
    {{#each restaurants}}
      <div class="col-12 col-sm-4 col-lg-3 mb-4">
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              {{!-- Name --}}
              <h6 class="card-title mb-1">{{ this.name }}</h6>
              {{!-- Category --}}
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <div class="d-flex justify-content-between">
                {{!-- Rating --}}
                <span class="badge badge-pill bg-danger font-weight-normal">
                {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div>
                  {{!-- Edit --}}
                  <a href="/restaurants/{{ this._id }}/edit" class="me-1"><i class="fas fa-edit icon-edit"></i></a>
                  {{!-- Delete --}}
                  <form method="POST" action="/restaurants/{{ this._id }}?_method=DELETE" style="display: inline;">
                    <button type="submit" class="fas fa-trash-alt icon-delete"></button>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </a>
      </div>
    {{/each}}    
  </div>
</div>